extends layout

block head
  title Remote

block content
  h3 Currently playing 

  h5 #{currentlyPlaying}

  a#pause(href="#",style="margin-right: 30px;")
    img(src="/assets/img/pause.png", style="width: 50px; height: 50px;")
  a#stop(href="/web/list")
    img(src="/assets/img/stop.png", style="width: 50px; height: 50px;")

  br
  br
  br

  div#position(style="color: #777; font-weight: bold; font-size: 30px;")

  br
  br

  input#positionSlider(type="range",value="0",min="0",max="100",style="width: 100%;")

  h5 Nothing
  a(href="/web/list") Go back to movies list

  div#duration(style="display: none;") #{currentDuration}

block specificJs
  script(type="text/javascript", src="/assets/js/current.js")
